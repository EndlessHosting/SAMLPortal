@model SAMLPortal.Models.App
@using System.Security.Cryptography.X509Certificates;

@{
    ViewData["Title"] = "Edit";
	X509Certificate2 certificate = ViewBag.certificate;
}

<h1>Edit</h1>

<h4>App</h4>
<p>Certificate fingerprint to use : @certificate.Thumbprint</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
			<div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MetadataURL" class="control-label"></label>
                <input asp-for="MetadataURL" class="form-control" />
                <span asp-validation-for="MetadataURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issuer" class="control-label"></label>
                <input asp-for="Issuer" class="form-control" />
                <span asp-validation-for="Issuer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SingleSignOnDestination" class="control-label"></label>
                <input asp-for="SingleSignOnDestination" class="form-control" />
                <span asp-validation-for="SingleSignOnDestination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SingleLogoutResponseDestination" class="control-label"></label>
                <input asp-for="SingleLogoutResponseDestination" class="form-control" />
                <span asp-validation-for="SingleLogoutResponseDestination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
